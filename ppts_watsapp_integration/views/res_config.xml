<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="whatsapp_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">Whatsapp Settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='companies']" position='after'>
                <h2>Whatsapp Configuration</h2>
                <div class="row mt16 o_settings_container" name="whatsappconfig">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                           <label for="server_url" string="Server URL"/>
                           <field name="server_url"/><br/>
                           <label for="access_token" string="Access Token"/>
                           <field name="access_token"/><br/>

                           <!-- <button type="object" name="reset_appleID" string="Reset"/>
                           <button type="object" name="login_appleID" string="Login"/> -->
                       </div>
                   </div>

               </div>
           </xpath>
       </field>
   </record>

</odoo>
