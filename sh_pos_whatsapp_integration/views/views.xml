<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="pos_config_form_view_inherit">
        <field name="name">pos.config.form.extended.view</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[4]" position="after">
                <h2 name="order">Whatsapp Configuration</h2>

                <div class="row mt16 o_settings_container">
                    <div id="autocomplete_address" class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="enable_whatsapp" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="enable_whatsapp" />
                        </div>
                    </div>
                </div>

                <div class="row mt16 o_settings_container">
                    <div id="whatsapp_template_id" class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="whatsapp_template_id" />
                            <field name="whatsapp_template_id" />
                        </div>
                    </div>
                </div>

                <div class="row mt16 o_settings_container">
                    <div id="broadcast_name" class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="broadcast_name" />
                            <field name="broadcast_name" />
                        </div>
                    </div>
                </div>

            </xpath>
        </field>
    </record>
</odoo>
