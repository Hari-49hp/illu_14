<odoo>
    <data>
        <template name="Disable Edit" id="disable_edit_website_builder">
            <style>
                .o_menu_systray li:nth-child(4),.o_menu_systray li:nth-child(5),.o_menu_systray li:nth-child(6){
                    display:none;
                }
            </style>
        </template>

        <template id="website_event.index" name="Events">
            <t t-call="website.layout">
                <div id="wrap" class="o_wevent_index">

                    <style>
                        .otherpageclipped {
                        width: 100%;
                        min-height: 500px;
                        max-width: 880px;
                        float: right;
                        right: 0;
                        top: 0;
                        clip-path: url('#clip-pathherobig');
                        -webkit-clip-path: url('#clip-pathherobig');
                        background-clip: content-box;
                        object-fit: cover;
                        overflow: hidden;
                        }


                        @media only screen and (max-width: 500px) and (min-width: 300px){
                            .otherpageclipped {
                                width: 100%;
                                min-height: 500px;
                                max-width: 880px;
                                float: right;
                                right: 0;
                                top: 0;
                                clip-path: url(#clip-pathherobigmobile) !important;
                                -webkit-clip-path: url(#clip-pathherobigmobile) !important;
                                background-clip: content-box;
                                object-fit: cover;
                                overflow: hidden;
                            }
                        }

                        .eventall-section-loadmore,  
                        #calendar-mainwrap > div.twobtns > a.fullbutton.o_default_snippet_text {
                            display:none !important;
                        }

                    </style>

                    <!--   HERO SECTION START  -->
                    <section class="top-hero_two  light-blue-bg">

                        <div class="eachsection">

                            <!-- HOME PAGE HERO IMAGE CONTAINER  START  -->
                            <div class="herotwo_wrapper mycontainer">

                                <div class="hero-leftintrotexts">
                                    <div class="breadcrum-sec">
                                        <label>
                                            <a href="/">Home /</a>
                                            <a>Events</a>
                                        </label>
                                    </div>
                                    <div class="subintrotext">
                                        <h6 class="hearblackstyletext" data-aos="fade-up" data-aos-delay="10">Choose your journey</h6>
                                        <h1 class="mainherotext" data-aos="fade-up" data-aos-delay="150">Events &amp; Classes</h1>
                                        <p class="herotxtprag" data-aos="fade-up" data-aos-delay="200">At Illuminations we offer a variety of different classes for personal and professional development. These classes include meditation, yoga, workshops, training programs, free seminars &amp; destination retreats!</p>
                                        <div data-aos="fade-up" data-aos-delay="200"></div>
                                    </div>
                                </div>

                            </div>
                            <!-- HOME PAGE HERO RIGHT IMAGE START  -->
                            <div class="herotwo-container-right">
                                <img class="otherpageclipped" src="/ppts_website_theme/static/src/img/eventsbaner.jpg" />

                                <svg width="0" height="0">
                                    <defs>
                                        <clipPath id="clip-pathherobig">
                                            <path class="cls-1" stroke="#000000" stroke-width="1.5794" stroke-miterlimit="10" d="M904,0v572.5c-317-198-473.5-36.2-593.8-119.9C189.9,368.9,292.1,246.6,0,0H904z" />
                                        </clipPath>
                                    </defs>
                                </svg>

                                <svg width="0" height="0">

                                    <defs>
                                        <clipPath id="clip-pathherobigmobile">
                                            <path d="M3.2,284.1c2.9-8.6,5-17.5,8.9-25.6c9.6-19.6,25.6-33.6,43-46.1c24.2-17.6,50.8-31.2,77.2-45c34.8-18.2,70-35.6,101.7-59
                                                c23.9-17.6,44.9-37.8,58.4-64.8c6.9-13.8,11-28.4,12.8-43.7c0,166.3,0,332.6,0,500c-5.3-27.3-23.9-41.8-45.6-53.5
                                                c-28.1-15.3-58.7-24.1-89-33.5c-31.4-9.7-63.1-18.7-93.3-32.1c-19.1-8.5-37.5-18.4-52.3-33.6c-11-11.3-18.6-24.5-21-40.4
                                                c-0.1-0.6-0.6-1.1-0.9-1.7C3.2,298.1,3.2,291.1,3.2,284.1z"/>
                                        </clipPath>
                                    </defs>
                                </svg>

                            </div>
                            <!-- HOME PAGE HERO RIGHT IMAGE END  -->
                            <div class="arrow-scroll heroleftarrow relativearrow" style="left:0px;">
                                <svg viewBox="0 0 426 142" fill="none"
                                    xmlns="http://www.w3.org/2000/svg">
                                    <g class="bbb-init bbb-discover" fill="none" fill-rule="evenodd" id="discover">
                                        <path id="discoverqq" class="arrow-line" stroke="#00AEC7" stroke-width="2.83" d="M403.9,128.7C293.9-3.6,126.7-27.4-21,93.4"></path>
                                        <path class="arrow-head" fill="#00AEC7" d="M404.5,128.1c-15.3-3.1-29.7,0.2-30.4,1.5c0,0,0,0,0,0.1c0.1,0.1,23.1-2.4,33.8,3.4c0.6,0.3,3.6-2.2,2.8-2.6
                                                c-1.5-0.8-7.6-11.3-5.7-14.9c0.6-1.2-3,0.4-3.8,1.9C399.7,120.3,403.2,126,404.5,128.1z">
                                        </path>
                                    </g>
                                    <text x="60" y="100" rotate="180deg" dominant-baseline="hanging" style=" transform: translate(0px, 10px);transition:2s; fill: #00aec7; font-size: 20px;" class="textaniamtion">
                                        <textPath href="#discoverqq" startOffset="10%" id="transcls">
                                                nwod llorcs
                                        </textPath>
                                    </text>
                                </svg>
                            </div>
                        </div>
                    </section>

                    <!--   HERO SECTION START  -->

                    <t t-call="ppts_website_theme.upcoming_calendar_website_all"/>
                    <!-- <t t-set="calendar_domain" t-value="'event_main'"/> -->

                    <!-- Most popular events Section Start -->
                    <t t-call="ppts_website_theme.overall_most_popular_event">
                        <t t-set="most_event_ids" t-value="request.env['event.event'].sudo().search([('stage_id','in',('Published','Announced'))],limit=3, order='seats_expected desc')" />
                    </t>
                    <!-- Most popular events Section END -->

                    <t t-call="ppts_website_theme.request_call_for_all_page">
                        <t t-set="callback_content" t-value="{'req_header': 'Request a Support Call back!', 
                        'req_desc': 'Learn how we can help you on your healing Journey' }" />
                    </t>
                    <!-- BOOOK A FREE CONSULTANT SECTION END-->

                    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.5.3/jspdf.min.js"></script>
                    <script type="text/javascript" src="https://html2canvas.hertzen.com/dist/html2canvas.js"></script>
                    <script src="/ppts_website_theme/static/src/js/events/upcoming_events.js"></script>
                    <script src="/ppts_website_theme/static/src/js/events/events.js"></script>

                </div>
            </t>
        </template>

        <template id="overall_most_popular_event">
            <section class="fullsectionpadding eachsection">
                <div class="mycontainer" data-aos="fade-up" data-aos-delay="100">
                    <div class="row">
                        <div class="col-xl-10 col-lg-10 col-md-8 col-sm-12 col-xs-12">
                            <h3 class="typo36-semibold">Most Popular Upcoming Events</h3>
                        </div>

                        <div class="col-xl-2 col-lg-2 col-md-4 col-sm-12 col-xs-12">
                            <div class="dropdown inputwrap multi-select-dd mostpopulat meditation-loca-list float-right" style="margin-top: 16px; border: 2px solid #00aec7;">
                                <t t-set="location_ids" t-value="request.env['res.company'].sudo().search([('website_show_location','=',True)])" />
                                <select class="meditation-loca-list" name="location" id="event-multiselect-filter-location" multiple="multiple">
                                    <t t-foreach="location_ids" t-as="location_id">
                                        <option t-att-value="location_id.id">
                                            <t t-esc="location_id.name" />
                                        </option>
                                    </t>
                                </select>
                            </div>
                        </div>

                    </div>
                    <div class="row" id="MostPopularEvent">

                        <input hidden="hidden" id="selected_event_id" name="selected_event_id" type="text" placeholder="Event ID"/>

                        <t t-if="most_event_ids">
                            <t t-foreach="most_event_ids" t-as="event_id">
                                <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                    <div class="calenday-eventlist-item column-wisecard-listcontainer">
                                        <div class="cal-event-img">
                                            <label class="filtercatlabel">
                                                <t t-esc="dict(event_id._fields['type_event'].selection).get(event_id.type_event)"/>
                                            </label>
                                            <img src="/ppts_website_theme/static/src/img/mstp1.jpg" />
                                        </div>
                                        <div class="eventfullinfos">
                                            <div class="event-typoingo">
                                                <div class="eventtitleinfos">
                                                    <div style="width: -webkit-fill-available;">
                                                        <label class="training chipsone">
                                                            <t t-esc="event_id.event_type_id.name"/>
                                                        </label>
                                                    </div>
                                                    <h5 class="l-event-h5-2line-elipsis">
                                                        <a class="a-clr" t-attf-href="/event/{{slug(event_id)}}/register" data-toggle="tooltip" data-placement="top" t-att-title="event_id.name">
                                                            <t t-esc="event_id.name"/>
                                                        </a>
                                                    </h5>
                                                </div>
                                                <div class="eventinfos">
                                                    <label>
                                                        <img src="/ppts_website_theme/static/src/img/location-icon.svg" width="24px" height="24px"/>
                                                        <t t-esc="event_id.company_id.name"/>
                                                    </label>
                                                    <label class="dateinfo-evt" t-att-title="event_id.get_event_dates()">
                                                        <img src="/ppts_website_theme/static/src/img/calendar-icon.svg" width="24px" height="24px"/>
                                                        <span t-if="event_id.event_multiple_date == 'oneday'" t-field="event_id.s_start_date" t-options="{&quot;format&quot;: &quot;d MMMM&quot;}"/>
                                                        <t t-if="event_id.event_multiple_date == 'multiday'">
                                                            <t t-set="event_start_date" t-value="event_id.multi_date_line_ids.ids[0]"/>
                                                            <t t-set="event_start_date" t-value="request.env['multi.date.line'].sudo().browse(event_start_date)" />
                                                            <t t-set="event_end_date" t-value="event_id.multi_date_line_ids.ids[-1]"/>
                                                            <t t-set="event_end_date" t-value="request.env['multi.date.line'].sudo().browse(event_end_date)" />
                                                            <span t-field="event_start_date.date_begin" t-options="{&quot;format&quot;: &quot;d MMMM&quot;}"/>
                                                            To 
                                                            <span t-field="event_end_date.date_begin" t-options="{&quot;format&quot;: &quot;d MMMM&quot;}"/>
                                                        </t>
                                                    </label>
                                                    <label t-if="event_id.event_multiple_date == 'oneday'">
                                                        <img src="/ppts_website_theme/static/src/img/time-icn.svg" width="24px" height="24px"/>
                                                        <t t-esc="event_id.hour_time_begin"/>
                                                            :                                                            
                                                        <t t-esc="event_id.min_time_begin"/>
                                                            To 
                                                        <t t-esc="event_id.hour_time_end"/>
                                                            :                                                        
                                                        <t t-esc="event_id.min_time_end"/>
                                                    </label>

                                                    <label t-if="event_id.event_multiple_date == 'multiday'">
                                                        <img src="/ppts_website_theme/static/src/img/time-icn.svg" width="24px" height="24px"/>
                                                        <t t-esc="event_start_date.hour_time_begin"/>
                                                        : 
                                                        <t t-esc="event_start_date.min_time_begin"/>
                                                        To 
                                                        <t t-esc="event_end_date.hour_time_end"/>
                                                        :                                                    
                                                        <t t-esc="event_end_date.min_time_end"/>
                                                    </label>
                                                    <label data-toggle="tooltip" data-placement="top" t-att-title="event_id.get_facilitator_name()" class="evt-card-rw-label">
                                                        <img src="/ppts_website_theme/static/src/img/person-icon.svg" width="24px" height="24px"/>
                                                        <a class="underline-a" t-attf-href="/team/therapists/{{event_id.facilitator_evnt_ids[0].id}}">
                                                            <t t-esc="event_id.get_facilitator_name()"/>
                                                        </a>
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="event-listbtn">
                                                <a href="#book_free_apt_snippet" class="borderedbtn" style="min-width: 140px;width: 100%;">Enquire Now</a>
                                                <a class="fullbutton" id="selected-upcoming-event-ID" t-att-data-event-id="event_id.id" style="min-width: 140px;width: 100%;">Book Now </a>



                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </t>
                        <t t-if="not most_event_ids">
                            <div class="col-12 text-center" style="min-height:300px">
                                <h3>No Events</h3>
                            </div>
                        </t>

                    </div>

                    <!-- <a class="borderedbtn o_default_snippet_text eventall-section-loadmore-a" href="/upcoming/event">
                        Load more events
                        <i class="fas fa-caret-down"></i>
                    </a> -->

                    <div class="text-center padtop30" data-aos="fade-up" data-aos-delay="300">
                        <a class="borderedbtn" href="/event/most/popular">
                            Load more events
                            <i class="fas fa-caret-down"></i>
                        </a>
                    </div>

                </div>
            </section>


        </template>

        <template id="website_theme_event_most_popular" name="Most Popular Events">
            <t t-call="website.layout">
                <div id="wrap" class="oe_structure">
                    <style>
                        footer > section > div{
                            background: #fff;
                        }
                    </style>
                    <t t-call="ppts_website_theme.overall_most_popular_event">
                        <t t-set="most_event_ids" t-value="request.env['event.event'].sudo().search([('stage_id','in',('Published','Announced'))], order='seats_expected desc')" />
                    </t>

                    <script src="/ppts_website_theme/static/src/js/events/events.js"></script>
                </div>
            </t>
        </template>


    </data>
</odoo>
